@model AdvertisementViewModel

<h1>@Model.Title</h1>

<p>@Model.Company</p>

<p>@Model.Description</p>

<p>@Model.Category</p>

<p>@Model.ContactName</p>

<p>@Model.ContactNumber</p>

<p>@Model.FrequencyPerHour</p>


@if (User.IsInRole("MarketingManager"))
{
	<div>
		<a asp-controller="advertisements" asp-action="editad" asp-route-id="@Model.Id">Edit Advertisement</a>
	</div>
}